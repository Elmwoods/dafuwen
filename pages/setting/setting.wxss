page {
  height: 100%;
  background-color: #f1f1f1;
}
.container{
  height: 100%;
  font-size: 28rpx;
}
.nav{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  /* padding: 20rpx 20rpx; */
  border-top: 1px solid #f1f1f1;
  background-color: #fff;
}

.nav .nav_li{
  display: inline-block;
  width: 33%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  vertical-align: middle;
}
.line{
  display: inline-block;
  width: 2rpx;
  height: 40rpx;
  box-sizing: border-box;
  margin: 20rpx 0;
  background-color: #e3e3e3;
  vertical-align: middle;
}
.nav .nav_li text{
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: -20rpx;
}
.nav view text.activited {
  border-bottom: 2rpx #3850e8 solid;
  color: #3850e8 ;
}
.date{
  width: 100%;
  height: 78rpx;
  line-height: 78rpx;
  text-align: center;
  color: #878787;
}
.module{
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}
.module-in{
  width: 100%;
  height: 100%;
  min-height: 252rpx;
  color: #747474;
  box-sizing: border-box;
  padding: 30rpx 20rpx 70rpx;
  background-color: #fff;
  border-radius: 8rpx;
  position: relative;
}
.module_title{
  font-size: 30rpx;
  color: #333;
  margin-bottom: 15rpx;
}
.module_txt{
  width: 100%;
  height: 80rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 30rpx;
}
.btn{
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #747474;
  position: absolute;
  left: 0%;
  bottom: 30rpx;
}
.show{
  height: 100%;
}