page {
  height: 100%;
  background-color: #f1f1f1;
}
.container{
  height: 100%;
  font-size: 28rpx;
}
.tips{
  width: 100%;
  height: 86rpx;
  line-height: 86rpx;
  color: #d70d19;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.ipt_info{
  width: 100%;
  height: 220rpx;
  background-color: #fff;
  box-sizing: border-box;
  padding: 0 30rpx;
  color: #333;
}
.ipt_info view{
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: flex-start;
  border-bottom: 1px solid #e5e5e5;
}
.ipt_info text{
  display: inline-block;
  width: 160rpx;
  color: #333;
}
.ipt_ipt{
  width: 80%;
  height: 100%;
  line-height: 100%;
}
.sure_btn {
  width: 690rpx;
  margin: 40rpx 30rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: normal;
  background-color: #3850e8;
}