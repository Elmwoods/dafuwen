page {
  height: 100%;
  background-color: #f1f1f1;
}
.container{
  height: 100%;
  font-size: 28rpx;
  padding-top: 30rpx;
}
.ipt_info{
  width: 100%;
  height: 220rpx;
  background-color: #fff;
  box-sizing: border-box;
  padding: 0 30rpx;
  color: #333;
}
.pwd,.erpwd{
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  color: #333;
  position: relative;
}
.pwd{
  border-bottom: 1px solid #e8e8e8;
}
.ipt_ipt{
  display: inline-block;
  vertical-align: middle;
  height: 100%;
  line-height: 100%;
}
.sure_btn {
  width: 690rpx;
  margin: 40rpx 30rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: normal;
  background-color: #3850e8;
}
.abs{
  width: 13rpx;
  height: 23rpx;
  position: absolute;
  top: 50rpx;
  right: 0rpx;
}